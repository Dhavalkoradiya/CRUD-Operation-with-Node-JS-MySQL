<% include ../partials/header %>

<div class="container">
	<h2>Edit New Event</h2>
	<div class="row">
		<div class="col-lg-12">
			
			<form action="/event/edit/<%= item[0].id %>" method="post">
				<input type="hidden" name="event_id" value="<%= item[0].id %>">
				<div class="form-group">
					<label>Name</label>
					<input type="text" name="name" class="form-control" placeholder="Enter event title" value="<%= item[0].name %>">
				</div>
				<div class="form-group">
					<label>Start Date</label>
					<input type="date" name="start_date" class="form-control" value="<%= item[0].start_date %>">
				</div>
				<div class="form-group">
					<label>End Date</label>
					<input type="date" name="end_date" class="form-control" value="<%= item[0].end_date %>">
				</div>
				<div class="form-group">
					<label>Description</label>
					<textarea type="text" name="description" class="form-control"><%= item[0].description %></textarea>
				</div>
				<div class="form-group">
					<label>Location</label>
					<input type="text" name="location" class="form-control" value="<%= item[0].location %>">
				</div>
				
				<button type="submit" class="btn btn-primary">Submit</button>
			</form>

		</div>
	</div>
</div>

<% include ../partials/footer %>